head
  meta(charset="UTF-8")
  link(rel="stylesheet" href="static/style.css")
  title #{info.videoDetails.title} - Minimal YouTube Player
  meta(name="viewport" content="width=device-width, user-scalable=no")
body
  //- if (query.v.startsWith("https://youtu.be/"))
  //-   script.
  //-     let query = "#{query.v}"
  //-     window.location.href = "?v="+query.substring(17)
  div(id="videoContainer")
    if video
      video(controls id="video" poster=info.videoDetails.thumbnails[info.videoDetails.thumbnails.length-1].url)
        each val, index in info.formats
          source(src=info.formats[index].url type=info.formats[index].mimeType)
    p(id="title") #{info.videoDetails.title}
    if (query.desc!=false)
      p(id="desc") !{description}
